<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hakeem.demo.TimeLine">

    <!--
         TODO(feedback)
         1-

    -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/time_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_keyboard_backspace_black_48"
        android:layout_alignBottom="@+id/time_line"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_button"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/no_connection_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_you_internet_connection_and_reopen_this_page"
        android:layout_centerInParent="true"
        android:layout_margin="8dp"
        android:textColor="#f90404"
        android:textAppearance="?android:textAppearanceMedium"/>

</RelativeLayout>